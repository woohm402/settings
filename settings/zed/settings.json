{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "buffer_font_family": "Monaspace Krypton",
  "buffer_font_size": 16,
  "buffer_font_weight": 500,
  "code_actions_on_format": { "source.fixAll.eslint": true },
  "current_line_highlight": "gutter",
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#00000000"
  },
  "features": { "inline_completion_provider": "copilot" },
  "lsp": {
    "vtsls": {
      "initialization_options": {
        "typescript": {
          "preferences": { "importModuleSpecifier": "non-relative" }
        }
      }
    }
  },
  "project_panel": { "folder_icons": false, "auto_fold_dirs": false },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    }
  },
  "tab_bar": { "show_nav_history_buttons": false },
  "tab_size": 2,
  "tabs": { "file_icons": true, "git_status": true },
  "terminal": {
    "dock": "right",
    "font_family": "Monaspace Krypton",
    "font_weight": 600
  },
  "theme": "Dracula",
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "ui_font_family": "Monaspace Krypton",
  "ui_font_size": 16
}
